<Page
    x:Class="APKognito.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:APKognito.Helpers"
    xmlns:local="clr-namespace:APKognito.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SettingsPage"
    d:DataContext="{d:DesignInstance local:SettingsPage,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="1000"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <helpers:ThemeToIndexConverter x:Key="ThemeToIndexConverter" />
    </Page.Resources>

    <!--  Theme Card  -->

    <StackPanel Margin="0,10">

        <TextBlock
            FontSize="20"
            FontWeight="Medium"
            Text="Personalization" />

        <ui:CardControl Margin="0,12,0,0" Icon="{ui:SymbolIcon Color24}">
            <ui:CardControl.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <ui:TextBlock
                        Grid.Row="0"
                        FontTypography="Body"
                        Text="App theme" />
                    <ui:TextBlock
                        Grid.Row="1"
                        Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                        Text="Select which app theme to display" />
                </Grid>
            </ui:CardControl.Header>
            <ComboBox
                Grid.Column="1"
                MinWidth="200"
                SelectedIndex="{Binding ViewModel.CurrentTheme, Converter={StaticResource ThemeToIndexConverter}, Mode=TwoWay}">
                <ComboBoxItem Content="Light" />
                <ComboBoxItem Content="Dark" />
                <ComboBoxItem Content="High Contrast" />
            </ComboBox>
        </ui:CardControl>

        <!--  Auto Update Card  -->

        <ui:CardExpander
            Margin="0,12,0,0"
            ContentPadding="0"
            Icon="{ui:SymbolIcon ClockArrowDownload24}">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ui:TextBlock Grid.Row="0" Text="Auto Update" />
                    <ui:TextBlock
                        Grid.Row="1"
                        Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                        Text="Select how APKognito handles updates"
                        TextWrapping="WrapWithOverflow" />
                </Grid>
            </ui:CardExpander.Header>
            <StackPanel>
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <ui:TextBlock Text="Auto Update" />

                    <ui:ToggleSwitch
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        IsChecked="{Binding ViewModel.AutomaticUpdatesEnabled, Mode=TwoWay}"
                        OffContent="Off"
                        OnContent="On" />
                </Grid>
                <Separator />
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <ui:TextBlock VerticalAlignment="Center" Text="Minutes Between Update Checks" />

                    <ui:NumberBox
                        Grid.Column="1"
                        Width="130"
                        HorizontalAlignment="Right"
                        Maximum="9999"
                        Minimum="1"
                        PlaceholderText="Update Delay (minutes)"
                        Value="{Binding ViewModel.UpdateDelay, Mode=TwoWay}" />
                </Grid>
                <Separator />
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <ui:TextBlock VerticalAlignment="Center" Text="Check For Updates" />

                    <ui:Button
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Content="Run Check" />
                </Grid>
                <Separator />
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <ui:TextBlock VerticalAlignment="Center" Text="Save Auto Update Settings" />

                    <ui:Button
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        Command="{Binding ViewModel.SaveUpdatesSettingsCommand}"
                        Content="Save Settings"
                        ToolTip="Saves your update preferences to file." />
                </Grid>
            </StackPanel>
        </ui:CardExpander>

        <!--  Debugging Card  -->

        <ui:CardExpander
            Margin="0,12,0,0"
            ContentPadding="0"
            Icon="{ui:SymbolIcon Bug24}">
            <ui:CardExpander.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ui:TextBlock Grid.Row="0" Text="Debugging" />
                    <ui:TextBlock
                        Grid.Row="1"
                        Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                        Text="Special features used for debugging purposes [Includes logpack]"
                        TextWrapping="WrapWithOverflow" />
                </Grid>
            </ui:CardExpander.Header>

            <StackPanel>
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <ui:TextBlock VerticalAlignment="Center" Text="Create Logpack (Required for submitting GitHub issues)" />
                    <ui:Button
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Command="{Binding ViewModel.CreateLogpackCommand}"
                        Content="Create Logpack" />
                </Grid>
                <Separator />
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <ui:TextBlock Text="Open APKognito AppData Directory" />
                        <ui:TextBlock
                            Grid.Row="1"
                            FontSize="12"
                            Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                            Text="{Binding ViewModel.AppDataPath}" />
                    </Grid>

                    <ui:Button
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Command="{Binding ViewModel.OpenAppDataCommand}"
                        Content="Open AppData" />
                </Grid>
                <Separator />
                <Grid Margin="16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <ui:TextBlock Text="Delete temporary files after rename" />

                    <ui:ToggleSwitch
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        IsChecked="{Binding ViewModel.ClearTempFilesOnRename}"
                        OffContent="No"
                        OnContent="Yes" />
                </Grid>
            </StackPanel>
        </ui:CardExpander>

        <!--  About Card  -->

        <TextBlock
            Margin="0,24,0,0"
            FontSize="20"
            FontWeight="Medium"
            Text="About" />

        <ui:CardExpander Margin="0,24,0,0" ContentPadding="0">
            <ui:CardExpander.Header>
                <Grid VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                        Text="© 2024 Sombody101" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.RowSpan="2"
                        Grid.Column="1"
                        Margin="0,0,16,0"
                        VerticalAlignment="Center"
                        Foreground="{ui:ThemeResource TextFillColorSecondaryBrush}"
                        Text="{Binding ViewModel.AppVersion, Mode=OneWay}" />
                </Grid>
            </ui:CardExpander.Header>
            <TextBlock Margin="16" Text="{Binding ViewModel.FullAppVersion, Mode=OneWay}" />
        </ui:CardExpander>

        <!--  Misc Card  -->

        <TextBlock
            Margin="0,24,0,0"
            FontSize="20"
            FontWeight="Medium"
            Text="Miscellaneous" />

        <ui:CardAction
            Margin="0,12,0,0"
            Command="{Binding ViewModel.TransferConfigsCommand}"
            ToolTip="">
            <StackPanel>
                <ui:TextBlock Text="Transfer Local Configurations" />
                <ui:TextBlock
                    Appearance="Secondary"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="Overwrites the configurations stored in '%APPDATA%\configs' with any loaded configuration files found in the same directory as APKognito."
                    TextWrapping="WrapWithOverflow" />

            </StackPanel>
        </ui:CardAction>

        <Separator Margin="0,10" />
        <TextBlock Margin="0,0,0,30" HorizontalAlignment="Center">
            <Run Text="Found a bug? Create an" />
            <Hyperlink NavigateUri="https://github.com/Sombody101/APKognito/issues" RequestNavigate="Hyperlink_RequestNavigate">
                issue on Github!
            </Hyperlink>
        </TextBlock>
    </StackPanel>
</Page>