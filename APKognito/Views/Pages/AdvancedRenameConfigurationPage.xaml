<Page
    x:Class="APKognito.Views.Pages.AdvancedRenameConfigurationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:APKognito.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="AdvancedRenameConfigurationPage"
    d:DataContext="{d:DesignInstance local:AdvancedRenameConfigurationPage,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="1000"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">

    <StackPanel>
        <ui:TextBlock
            Margin="0,16,0,0"
            FontSize="24"
            FontWeight="SemiBold"
            Text="Advaned Renaming Settings" />

        <ui:TextBlock
            Margin="0,16,0,0"
            FontSize="20"
            FontWeight="Medium"
            Text="Regex" />

        <StackPanel Margin="0,16,0,0">

            <ui:Card>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <ui:TextBlock Text="File replace pattern" />
                        <StackPanel Orientation="Horizontal">
                            <ui:TextBlock
                                Margin="0,0,2,0"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="Use"
                                TextWrapping="WrapWithOverflow" />
                            <ui:Card Padding="3,0">
                                <ui:TextBlock
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    Text="{}{value}"
                                    TextWrapping="WrapWithOverflow" />
                            </ui:Card>
                            <ui:TextBlock
                                Margin="2,0,0,0"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="for the company name replacement."
                                TextWrapping="WrapWithOverflow" />
                        </StackPanel>
                    </StackPanel>

                    <ui:TextBox
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        Text="{Binding ViewModel.PackageReplaceRegexString}" />

                    <ui:Button
                        Grid.Column="2"
                        Margin="5,5,0,5"
                        VerticalAlignment="Stretch"
                        Command="{Binding ViewModel.ResetRegexCommand}"
                        Icon="{ui:SymbolIcon Symbol=ArrowCounterclockwise48}" />
                </Grid>
            </ui:Card>
        </StackPanel>

        <ui:TextBlock
            Margin="0,20,0,0"
            FontSize="20"
            FontWeight="Medium"
            Text="Rename Options" />

        <StackPanel Margin="0,16,0,0">
            <ui:Card>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <ui:TextBlock Text="Rename Libraries" />
                    <ui:ToggleSwitch
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        IsChecked="{Binding ViewModel.RenameLibs}" />
                </Grid>
            </ui:Card>

            <ui:Card>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <ui:TextBlock Text="Rename Libraries Internally" />
                    <ui:ToggleSwitch
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        IsChecked="{Binding ViewModel.RenameLibsInternal}" />
                </Grid>
            </ui:Card>

            <ui:Card>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <ui:TextBlock Text="Rename OBB Files Internally" />
                    <ui:ToggleSwitch
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        IsChecked="{Binding ViewModel.RenameObbsInternal}" />
                </Grid>
            </ui:Card>
        </StackPanel>

        <ui:TextBlock
            Margin="0,20,0,0"
            FontSize="20"
            FontWeight="Medium"
            Text="OBB Renaming" />

        <StackPanel Margin="0,16,0,0">
            <ui:Card Margin="0,5" IsEnabled="{Binding ViewModel.RenameObbsInternal}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <ui:TextBlock
                            IsEnabled="{Binding ViewModel.RenameObbsInternal}"
                            Text="Extra OBB Rename Paths"
                            TextWrapping="WrapWithOverflow" />
                        <ui:TextBlock
                            Margin="0,0,10,0"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Text="Extra paths of internal OBB files to rename (catalog will always be renamed)."
                            TextWrapping="WrapWithOverflow" />
                    </StackPanel>

                    <ui:TextBox
                        Grid.Column="1"
                        Height="100"
                        AcceptsReturn="True"
                        Text="{Binding ViewModel.RenameObbsInternalExtras}" />
                    <ui:Button
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,10,0,0"
                        HorizontalAlignment="Right"
                        Command="{Binding ViewModel.UpdateRenameObbsInternalExtrasCommand}"
                        CommandParameter=""
                        Content="Save Paths" />
                </Grid>
            </ui:Card>
        </StackPanel>
    </StackPanel>
</Page>