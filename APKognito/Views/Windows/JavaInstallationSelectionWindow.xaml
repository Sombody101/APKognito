<base:KognitoWindow
    x:Class="APKognito.Views.Windows.JavaInstallationSelectionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:APKognito.Base"
    xmlns:ctrls="clr-namespace:APKognito.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:APKognito.Helpers"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:APKognito.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:APKognito.Models"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="JavaSelectorWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance local:JavaInstallationSelectionWindow,
                                     IsDesignTimeCreatable=True}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Focusable="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Icon="/Assets/apkognito.ico"
    WindowBackdropType="{Binding ViewModel.WindowStyle}"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding ViewModel.LoadJdkVersionsCommandCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <base:KognitoWindow.Resources>
        <ResourceDictionary>
            <helpers:BoolToVisibility x:Key="BoolToVisibility" />
            <helpers:VisibilityInverter x:Key="VisibilityInverter" />
            <helpers:GBConverter x:Key="GBConverter" />
        </ResourceDictionary>
    </base:KognitoWindow.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            x:Name="TitleBar"
            Title="Java Installer"
            Height="50"
            CloseWindowByDoubleClickOnIcon="True"
            FontFamily="{StaticResource TechSans}">
            <ui:TitleBar.Icon>
                <ui:ImageIcon
                    Width="25"
                    Height="25"
                    Margin="0,-35"
                    RenderSize="0,0"
                    Source="pack://application:,,,/Assets/apkognito.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <ScrollViewer Grid.Row="1" Margin="10,0,10,10">
            <StackPanel>

                <Label Margin="0,10" Content="Custom installation path" />

                <CheckBox
                    Content="Use custom install path"
                    IsChecked="{Binding ViewModel.UseCustomInstallPath}"
                    ToolTip="" />
                <ctrls:DirectorySelector
                    Margin="40,5,10,10"
                    DirectoryPath="{Binding ViewModel.CustomInstallPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    IsEnabled="{Binding ViewModel.UseCustomInstallPath}" />

                <Label Margin="0,10" Content="Java version selection" />

                <Border
                    BorderBrush="#535353"
                    BorderThickness="1"
                    CornerRadius="4">
                    <Grid>
                        <ui:ListView
                            VerticalAlignment="Stretch"
                            d:ItemsSource="{d:SampleData ItemCount=5}"
                            AlternationCount="2"
                            Background="DarkGray"
                            ItemsSource="{Binding ViewModel.JavaInstallationCollection}"
                            SelectedItem="{Binding ViewModel.SelectedInstallation}">

                            <ui:ListView.ItemTemplate>
                                <DataTemplate DataType="{x:Type models:JavaDownloadInfo}">
                                    <Grid Margin="10,5,0,5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <ui:TextBlock Grid.Column="0" VerticalAlignment="Center">
                                            <Run Text="JDK" />
                                            <Run Text="{Binding JavaVersion.Major, Mode=OneWay}" />
                                        </ui:TextBlock>

                                        <ui:TextBlock
                                            Grid.Column="1"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            LineHeight="12"
                                            LineStackingStrategy="BlockLineHeight"
                                            Opacity=".5"
                                            Text="{Binding JavaVersion, Mode=OneWay}" />

                                        <StackPanel
                                            Grid.Column="2"
                                            HorizontalAlignment="Right"
                                            Orientation="Horizontal">
                                            <ui:Card
                                                Margin="0,0,10,0"
                                                Padding="3"
                                                BorderBrush="Gold"
                                                ToolTip="Long Term Support"
                                                Visibility="{Binding LTS, Converter={StaticResource BoolToVisibility}}">
                                                <ui:TextBlock Text=" LTS " />
                                            </ui:Card>

                                            <ui:Card
                                                Margin="0,0,10,0"
                                                Padding="3"
                                                BorderBrush="LightBlue"
                                                ToolTip="Installer download size">
                                                <ui:TextBlock Text="{Binding DownloadSize, Converter={StaticResource GBConverter}}" />
                                            </ui:Card>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ui:ListView.ItemTemplate>
                        </ui:ListView>

                        <Grid Margin="10" Visibility="{Binding ViewModel.LoadJdkVersionsCommandCommand.IsRunning, Converter={StaticResource BoolToVisibility}}">
                            <Grid.RowDefinitions>
                                <RowDefinition />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <ui:TextBlock HorizontalAlignment="Center" Text="Loading available JDK installations..." />
                            <ProgressBar Grid.Row="1" IsIndeterminate="{Binding ViewModel.LoadJdkVersionsCommandCommand.IsRunning}" />
                        </Grid>
                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <ui:Card
            Grid.Row="2"
            Padding="8"
            HorizontalContentAlignment="Right">
            <StackPanel Orientation="Horizontal">
                <ui:Button
                    Margin="10,0"
                    Click="CancelButton_Click"
                    Content="Cancel" />
                <ui:Button
                    Appearance="Info"
                    Click="ContinueButton_ClickAsync"
                    Content="Continue" />
            </StackPanel>
        </ui:Card>

    </Grid>

</base:KognitoWindow>
