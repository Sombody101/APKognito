<ui:FluentWindow
    x:Class="APKognito.Views.Windows.SetupWizardWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:APKognito.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SetupWizard"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance local:SetupWizardWindow,
                                     IsDesignTimeCreatable=True}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            x:Name="TitleBar"
            Title="APKognito Setup"
            Grid.Row="0"
            Height="50"
            FontFamily="{StaticResource TechSans}">
            <ui:TitleBar.Icon>
                <ui:ImageIcon
                    Width="25"
                    Height="25"
                    Margin="0,-35"
                    RenderOptions.BitmapScalingMode="HighQuality"
                    RenderSize="0,0"
                    Source="pack://application:,,,/Assets/apkognito.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <ui:NavigationView
            x:Name="RootNavigation"
            Padding="42,0"
            FrameMargin="0"
            IsBackButtonVisible="Visible"
            IsPaneToggleVisible="True"
            OpenPaneLength="0"
            TitleBar="{Binding ElementName=TitleBar, Mode=OneWay}">

            <ui:NavigationView.ContentOverlay>
                <Grid>
                    <ui:SnackbarPresenter x:Name="SnackbarPresenter" />
                </Grid>
            </ui:NavigationView.ContentOverlay>

        </ui:NavigationView>

        <Border
            Grid.Row="1"
            Padding="10"
            BorderThickness="0,1,0,0">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <ui:Button
                    Command="{Binding ViewModel.BackCommand}"
                    Content="Back"
                    IsEnabled="{Binding ViewModel.CanGoBack}" />

                <ui:Button
                    Margin="5,0,0,0"
                    Command="{Binding ViewModel.NextCommand}"
                    Content="Next"
                    IsEnabled="{Binding ViewModel.CanGoNext}"
                    Visibility="{Binding ViewModel.ShowNextButton, Converter={StaticResource BooleanToVisibilityConverter}}" />

                <ui:Button
                    Margin="10,0,0,0"
                    Appearance="Primary"
                    Command="{Binding ViewModel.FinishCommand}"
                    Content="Finish"
                    IsEnabled="{Binding ViewModel.CanFinish}"
                    Visibility="{Binding ViewModel.ShowFinishButton, Converter={StaticResource BooleanToVisibilityConverter}}" />
            </StackPanel>
        </Border>
    </Grid>
</ui:FluentWindow>
