<UserControl
    x:Class="APKognito.Controls.AndroidDeviceSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:APKognito.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DesignHeight="50"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <ComboBox
            Margin="0,0,10,0"
            DropDownOpened="ComboBox_DropDownOpened"
            IsEditable="False"
            IsReadOnly="True"
            IsSynchronizedWithCurrentItem="True"
            ItemsSource="{Binding DeviceList, Mode=TwoWay}"
            SelectedItem="{Binding SelectedDevice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Text="Select ADB Device" />

        <ui:Button
            Grid.Column="1"
            Margin="0,0,10,0"
            Command="{Binding TryConnectionCommand}"
            Content="Connect" />
    </Grid>
</UserControl>
